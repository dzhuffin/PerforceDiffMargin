<platformUi:DialogWindow x:Class="GitDiffMargin.View.SettingsDialog"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:GitDiffMargin.View"
             xmlns:platformUi="clr-namespace:Microsoft.VisualStudio.PlatformUI;assembly=Microsoft.VisualStudio.Shell.11.0"
             mc:Ignorable="d" 
             Height="330" Width="400" ResizeMode="NoResize">
    <Grid>
        <Label Content="Please, configure Perforce connection. You can set Perforce&#xD;&#xA;environmental variables and login with password.&#xD;&#xA;&quot;p4 set&quot; and &quot;p4 login&quot; commands will be used, you can find details." HorizontalAlignment="Center" Margin="0,10,0,0" VerticalAlignment="Top" Width="372" Height="66"/>
        <Button Content="Login" HorizontalAlignment="Center" Margin="0,265,0,0" VerticalAlignment="Top" Width="100" Click="LoginClick"/>
        <Label Name="ResultLabel" Foreground="#FFFF0000" HorizontalAlignment="Center" Margin="0,200,0,0" VerticalAlignment="Top"/>

        <Grid Margin="10,65,10,90">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="71*"></ColumnDefinition>
                <ColumnDefinition Width="301*"></ColumnDefinition>
            </Grid.ColumnDefinitions>
            <Grid.RowDefinitions>
                <RowDefinition Height="*"></RowDefinition>
                <RowDefinition Height="*"></RowDefinition>
                <RowDefinition Height="*"></RowDefinition>
                <RowDefinition Height="*"></RowDefinition>
            </Grid.RowDefinitions>

            <Label Content="P4PORT" Grid.Row="0" Grid.Column="0" HorizontalAlignment="Center" VerticalAlignment="Center" Height="26" Width="52"/>
            <Label Content="P4CLIENT" Grid.Row="1" Grid.Column="0" HorizontalAlignment="Center" VerticalAlignment="Center" Height="26" Width="61"/>
            <Label Content="P4USER" Grid.Row="2" Grid.Column="0" HorizontalAlignment="Center" VerticalAlignment="Center" Height="26" Width="51"/>
            <Label Content="Password" Grid.Row="3" Grid.Column="0" HorizontalAlignment="Center" VerticalAlignment="Center" Height="26" Width="60"/>

            <TextBox Name="PortTextBox" HorizontalAlignment="Center" Grid.Row="0" Grid.Column="1" TextWrapping="Wrap" Text="" VerticalAlignment="Center" Width="280" Height="18"/>
            <TextBox Name="ClientTextBox" HorizontalAlignment="Center" Grid.Row="1" Grid.Column="1" TextWrapping="Wrap" Text="" VerticalAlignment="Center" Width="280" Height="18"/>
            <TextBox Name="UserTextBox" HorizontalAlignment="Center" Grid.Row="2" Grid.Column="1" TextWrapping="Wrap" Text="" VerticalAlignment="Center" Width="280" Height="18"/>
            <PasswordBox Name="PasswordTextBox" HorizontalAlignment="Center" Grid.Row="3" Grid.Column="1" VerticalAlignment="Center" Width="280" Height="18"/>
        </Grid>
    </Grid>
</platformUi:DialogWindow>
